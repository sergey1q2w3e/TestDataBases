<Window x:Class="TestDataBases.CreateTableForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestDataBases"
        mc:Ignorable="d"
        Title="Creating Table" Height="150" Width="300" MaxWidth="300" MaxHeight="150" MinWidth="300" MinHeight="151">
    <Grid>
        <Label x:Name="label" Content="Enter the table name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Padding="5"/>
        <TextBox x:Name="textBox" Margin="10,41,10,49" TextWrapping="Wrap" BorderThickness="2" Background="WhiteSmoke"/>
        <Button x:Name="buttonOK" Content="Ok" Click="OK_Click" HorizontalAlignment="Left" Height="25" Margin="20,0,0,10" VerticalAlignment="Bottom" Width="100"/>
        <Button x:Name="buttonCancel" Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Right" Height="25" Margin="0,0,20,10" VerticalAlignment="Bottom" Width="100"/>

    </Grid>
</Window>
